rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['uid', 'email', 'displayName', 'role', 'createdAt', 'lastLogin']);
    }
    
    // Hazards collection - authenticated users can read/write their own hazards
    match /hazards/{hazardId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.keys().hasAll(['id', 'userId', 'userEmail', 'imageUrl', 'description', 'location', 'status', 'createdAt']);
    }
    
    // Admin can read all hazards and users
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.role in ['admin', 'super_admin'];
    }
  }
}
