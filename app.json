{
  "expo": {
    "name": "hazard",
    "slug": "hazard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hazard",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to share it."
      }
    },
    "android": {
      "package": "com.villavito.hazard",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["ACCESS_FINE_LOCATION"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to let you capture incidents.",
          "cameraPermission": "The app needs access to your camera to capture incident photos."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "The app needs access to your camera for real-time incident capture."
        }
      ],
      [
        "expo-location",
        {
          "locationPermission": "The app needs access to your location to share it with others."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
